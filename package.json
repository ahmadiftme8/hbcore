{
  "name": "hbcore",
  "version": "1.0.0",
  "scripts": {
    "tgbot:start": "bun run --bun --filter='@hbcore/tgbot' start",
    "tgapp:dev": "bun run --bun --filter='@hbcore/tgapp' dev",
    "format": "bun run --bun --filter='*' format",
    "lint": "bun run --bun --filter='*' lint",
    "check": "bun run --bun --filter='*' check",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "release:dry-run": "changeset publish --dry-run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "1.3.1"
  }
}
