# Node 
NODE_ENV=development

# API Configuration
API_PORT=3001
CORS_ORIGINS=http://localhost:3000
JWT_SECRET=your-jwt-secret-key-change-in-production
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=2
OTP_HMAC_SECRET=your-otp-hmac-secret-key-change-in-production
OTP_LOCKOUT_MINUTES=15
ADMIN_EMAILS=admin@example.com

# Web Configuration
WEB_PORT=3000

# Unleash Configuration
UNLEASH_URL=http://localhost:4242/api
UNLEASH_APP_NAME=hbcore-api
# Backend API token for connecting to Unleash from the API service
UNLEASH_BACKEND_API_TOKEN=default:development.unleash-insecure-api-token
# Frontend API token for connecting to Unleash from the web service
UNLEASH_FRONTEND_API_TOKEN=default:development.unleash-insecure-frontend-api-token
# Legacy variable name (for backward compatibility)
UNLEASH_API_TOKEN=default:development.unleash-insecure-api-token
UNLEASH_DATABASE_URL=postgresql://unleash:unleash@localhost:5433/unleash
UNLEASH_POSTGRES_USER=unleash
UNLEASH_POSTGRES_PASSWORD=unleash
UNLEASH_POSTGRES_NAME=unleash
UNLEASH_POSTGRES_PORT=5433
UNLEASH_DEFAULT_ADMIN_PASSWORD=unleash-admin-password
# Initialization tokens for Unleash (used during first startup)
INIT_FRONTEND_API_TOKENS=default:development.unleash-insecure-frontend-api-token
INIT_BACKEND_API_TOKENS=default:development.unleash-insecure-api-token

# PostgreSQL Database Configuration
POSTGRES_URL=postgresql://hbcore:hbcore@localhost:5432/hbcore
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=hbcore
POSTGRES_PASSWORD=hbcore
POSTGRES_NAME=hbcore
POSTGRES_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Firebase Configuration (Server-side - Admin SDK)
# Get these values from Firebase Console:
# Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Firebase Configuration (Client-side - Web SDK)
# Get these values from Firebase Console:
# Project Settings > General > Your apps > Web app > Config
# Or: Project Settings > General > Your apps > Add app > Web
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key

# Turnstile Configuration
# Get these values from Cloudflare Dashboard:
# https://dash.cloudflare.com/?to=/:account/turnstile
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
